<div class="posts">
  {{#each posts as |post|}}
    <article class="card">
      <div class="card-header flex-row justify-space-between">
        <h2>
          <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <div>
          Posted by
          {{post.user.username}}
          on
          {{format_date post.date_created}}
        </div>
      </div>
      <div class="card-body">
        {{post.body}}
      </div>
    </article>
  {{/each}}
</div>